{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ESNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node","jest"],
    "typeRoots": ["./types", "./node_modules/@types"],
  },
  "exclude": ["dist"],
  "include": ["src/**/*"]
}